<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.userslist.mapper.StudentMapper">

    <resultMap type="Student" id="StudentResult">
        <result property="stuId"    column="stu_id"    />
        <result property="seId"    column="se_id"    />
        <result property="gId"    column="g_id"    />
        <result property="classId"    column="class_id"    />
        <result property="stuName"    column="stu_name"    />
        <result property="password"    column="password"    />
    </resultMap>

    <sql id="selectStudentVo">
        select stu_id, se_id, g_id, class_id, stu_name, password from student
    </sql>

    <select id="selectStudentList" parameterType="Student" resultMap="StudentResult">
        <include refid="selectStudentVo"/>
        <where>
            <if test="classId != null "> and class_id = #{classId}</if>
            <if test="stuName != null  and stuName != ''"> and stu_name like concat('%', #{stuName}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
        </where>
    </select>

    <select id="selectStudentByStuId" parameterType="String" resultMap="StudentResult">
        <include refid="selectStudentVo"/>
        where stu_id = #{stuId}
    </select>

    <insert id="insertStudent" parameterType="Student">
        insert into student
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stuId != null">stu_id,</if>
            <if test="seId != null">se_id,</if>
            <if test="gId != null">g_id,</if>
            <if test="classId != null">class_id,</if>
            <if test="stuName != null and stuName != ''">stu_name,</if>
            <if test="password != null and password != ''">password,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="stuId != null">#{stuId},</if>
            <if test="seId != null">#{seId},</if>
            <if test="gId != null">#{gId},</if>
            <if test="classId != null">#{classId},</if>
            <if test="stuName != null and stuName != ''">#{stuName},</if>
            <if test="password != null and password != ''">#{password},</if>
         </trim>
    </insert>

    <update id="updateStudent" parameterType="Student">
        update student
        <trim prefix="SET" suffixOverrides=",">
            <if test="seId != null">se_id = #{seId},</if>
            <if test="gId != null">g_id = #{gId},</if>
            <if test="classId != null">class_id = #{classId},</if>
            <if test="stuName != null and stuName != ''">stu_name = #{stuName},</if>
            <if test="password != null and password != ''">password = #{password},</if>
        </trim>
        where stu_id = #{stuId}
    </update>

    <delete id="deleteStudentByStuId" parameterType="String">
        delete from student where stu_id = #{stuId}
    </delete>

    <delete id="deleteStudentByStuIds" parameterType="String">
        delete from student where stu_id in
        <foreach item="stuId" collection="array" open="(" separator="," close=")">
            #{stuId}
        </foreach>
    </delete>
</mapper>
